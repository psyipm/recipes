<div class="col-md-7 col-md-offset-3">
  <h1>Восстановление пароля</h1>
  <form ng-submit="resetPasswd(passwordResetForm)" role="form" ng-init="passwordResetForm = {}">
    <div class="form-group">
      <label>Email</label>
      <input type="email" name="email" ng-model="passwordResetForm.email" required="required" class="form-control"/>
    </div>
    <alerts />
    <button type="submit" class="btn btn-primary btn-lg">Восстановить пароль</button>
  </form>
  <div class="ajax-loader" ng-show="waiting"></div>
</div>
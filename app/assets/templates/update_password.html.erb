<div class="col-md-7 col-md-offset-3">
  <h1>Смена пароля</h1>
  <form ng-submit="updatePassword(changePasswordForm)" role="form" ng-init="changePasswordForm = {}">
    <div class="form-group">
      <label>Новый пароль</label>
      <input class="form-control" type="password" name="password" ng-model="changePasswordForm.password" required="required">
    </div>
    <div class="form-group">
      <label>Подтверждение</label>
      <input class="form-control" type="password" name="password_confirmation" ng-model="changePasswordForm.password_confirmation" required="required">
    </div>
    <alerts></alerts>
    <button type="submit" class="btn btn-primary btn-lg">Изменить пароль</button>
  </form>
  <div class="ajax-loader" ng-show="waiting"></div>
</div>
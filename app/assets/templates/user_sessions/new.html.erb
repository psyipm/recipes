<div class="col-md-7 col-md-offset-3">
	<h1>Авторизация</h1>
	<form ng-submit="submitLogin(loginForm)" role="form" ng-init="loginForm = {}"> 
		<div class="form-group"> 
			<label for="email">Email</label> 
			<input type="email" name="email" id="email" ng-model="loginForm.email" required="required" class="form-control"> 
		</div> 
		<div class="form-group"> 
			<label for="password">Пароль</label> 
			<input type="password" name="password" id="password" ng-model="loginForm.password" required="required" class="form-control"> 
		</div> 
		<alerts />
		<button type="submit" class="btn btn-primary btn-lg">Войти</button> 
	</form>
	<div class="auth-providers top-buffer-md">
		<p class="top-buffer-md">...или войдите через:</p>
		<ul class="list-unstyled list-inline">
			<li class="row">
				<a href="#" ng-click="omniauthLogin('vkontakte')" title="Войти через ВКонтакте">
					<img src="/assets/vk.png" alt="Войти через ВКонтакте">
				</a>
			</li>
			<li class="row">
				<a href="#" ng-click="omniauthLogin('facebook')" title="Войти через facebook">
					<img src="/assets/facebook.png" alt="Войти через facebook">
				</a>
			</li>
			<li class="row">
				<a href="#" ng-click="omniauthLogin('google_oauth2')" title="Войти через Google">
					<img src="/assets/google_plus.png" alt="Войти через Google">
				</a>
			</li>
			<li class="row">
				<a href="#" ng-click="omniauthLogin('github')" title="Войти через GitHub">
					<img src="/assets/github.png" alt="Войти через GitHub">
				</a>
			</li>
		</ul>
	</div>
</div>
<% provide(:title, "Поиск кулинарных рецептов - ") %>

<div>
	<div class="view-container col-md-10 col-sm-12 col-xs-12">
		<div data-ng-view class="view-frame animate-view"></div>
	</div>
	<div class="sidebar-right col-md-2 col-sm-12 col-xs-12">
		<!--noindex-->
			<hr class="hidden-md hidden-lg">
			<div class="visible-lg">
				<a href="/recipes/new" class="btn btn-default btn-lg add-recipe-btn">Добавить рецепт</a>
			</div>
			<div class="hidden-lg">
				<a href="/recipes/new" class="btn btn-default add-recipe-btn">Добавить рецепт</a>
			</div>
			<hr>
		<!--/noindex-->
		<div data-ng-controller="TagsController">
			<div class="tagcloud-settings">
				<span>Облако тегов</span>
				<a href="/" data-ng-if="multiTagSearch" data-ng-click="clearTags($event)" class="btn btn-default btn-noborder btn-xs" title="Убрать все теги из поиска">
					<span class="glyphicon glyphicon-remove"></span>
				</a>
				<button class="btn btn-default btn-noborder btn-xs" data-ng-click="openSettings()" title="Настройки">
					<span class="glyphicon glyphicon-cog"></span>
				</button>
			</div>
			<ul class="tagcloud">
				<% @tags.each do |t| %>
					<% cache(t) do %>
						<li data-weight="<%= t.weight %>">
							<a data-ng-click="addTag($event)" href="/browse?tag=<%=u t.title %>"><%= t.title %></a>
						</li>
					<% end -%>
				<% end %>
			</ul>
		</div>
	</div>
</div>